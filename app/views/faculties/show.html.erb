<p></p>
<div class="container">

	<table class="table-bordered loc">
		<tr class="table-active">
			<th>Faculty name</th>
			<td><%= @faculty.faculty_name %>
			</td> 
		</tr>

		<tr class="table-active">
			<th>Email</th>
			<td><%= @faculty.email %>
			</td>
		</tr>
		<tr class="table-active">

			<% if admin_signed_in? %>

				<th>Contact</th>
				<td><%= @faculty.contact %>
				</td>
			<%end%>
		</tr>
	</table>



	<table class="table-bordered cools">

		<tr class="table-active">
			<th colspan="2">Batch & Subject Name <br> faculty teach </th>
			<th>Batch starting<br>time</th>
			<th>Batch ending <br>time</th>
		</tr>


		<%@faculty.batch_faculty_subjects.each do |faculty| %>
		<tr class="table-active">
			<td>
				<%= faculty.batch.batch_name %></td>
				<td>
					<%= faculty.subject.subject_name %>

				</td>
				<td> <%= faculty.batch.starting_time.strftime("%H:%M") %></td>
				<td><%= faculty.batch.ending_time.strftime("%H:%M") %></td>



			</tr>


			<% end %>

		</table>


		<p></p>

		<% if admin_signed_in? %>

		<%=  link_to 'Admin back' ,  faculties_path, class: "btn btn-primary btn-sm btn-active" %>

		<% elsif user_signed_in?%>

		<%=  link_to 'User back' ,  student_index_path , class: "btn btn-primary btn-sm btn-active" %>
		<% end %>

	</div>

