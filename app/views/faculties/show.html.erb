<div class="container">
	

	<p>
		<strong>Faculty name</strong>
		<%= @faculty.faculty_name %>
	</p> 
	

	<p>
		<strong>Email</strong>
		<%= @faculty.email %>
	</p>

	

	<p>
		<strong>total no. of batch</strong>
		<%= @faculty.batches.ids.count %>
	</p>

  <p>
		<strong>batch no. faculty teaching</strong>
		<%= @faculty.batches.ids %>
	</p>

	<p>
		<strong>batches name faculty teach</strong>
		<%= @faculty.batches.collect(&:batch_name) %>
	</p>

	<% if admin_signed_in? %>

	<p>
		<strong>Contact</strong>
		<%= @faculty.contact %>
	</p>

	<%=  link_to 'Admin back' ,  faculties_path %>

	<% elsif user_signed_in?%>

	<%=  link_to 'User back' ,  student_index_path  %>
	<% end %>
	
</div>