<div class="container">

<h1>Listing faculties</h1>
 <%= link_to 'New faculty', new_faculty_path, class: "btn btn-info active" %>
 <p></p>
  <table class="table table-bordered">
  <tr class="active">
    <th>faculty name</th>
        <th colspan="3">Action</th>

  </tr>
 
  <% @faculties.each do |faculty| %>
    <tr>
      <td class="info" ><%= faculty.faculty_name %></td>
      <td class="success"><%= link_to 'Show', faculty_path(faculty), class: "btn btn-success active" %></td>
        <td class="warning"><%= link_to 'Edit', edit_faculty_path(faculty) , class: "btn btn-warning active" %></td>
      <td class="danger"><%= link_to 'Destroy', faculty_path(faculty),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
    </tr>
  <% end %>
</table>
</div>