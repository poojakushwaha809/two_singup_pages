

<div class="container">

 <p style="text-align: right;"><%= link_to 'New faculty', new_faculty_path, class: "btn btn-info active" %></p>


<table class="table-bordered effect">
  <th class="table-active"> Faculty Details</th>
</table>

 <p></p>
  <table class="table table-bordered fac ">
  <tr class="table-active">
    <th>Faculty Id</th>
    <th>faculty name</th>
    <th>No. of batches faculty teaching</th>
    <th>Total No. of batch teaching </th>
        <th colspan="3">Action</th>
  </tr>
 
  <% @faculties.each do |faculty| %>
    <tr>
      <td class="table-active"><%= faculty.id%></td>
      <td class="table-active" ><%= faculty.faculty_name %></td>
        <td class="table-active"><%= faculty.batches.ids%></td>
        <td class="table-active"><%= faculty.batches.ids.count%></td>

      <td class="table-success"><%= link_to 'Show', faculty_path(faculty), class: "btn btn-success active" %></td>
        <td class="table-warning"><%= link_to 'Edit', edit_faculty_path(faculty) , class: "btn btn-warning active" %></td>
      <td class="table-danger"><%= link_to 'Destroy', faculty_path(faculty),
              method: :delete,
              data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
    </tr>
  <% end %>
</table>
</div>

