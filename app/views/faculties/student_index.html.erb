<div class="card-deck" style="width: 30rem; height:05rem">
  <% @faculties.each do |faculty| %>
  <div class="card"  >
    <img src='/assets/db1.jpg' alt="" height="200" >
    <div class="card-body bg ">
      <h4 class="card-title"><%= faculty.faculty_name %></h4>

      <h6 class="card-text">  Faculty Name </h6>
      <p class="card-text"> <%= faculty.faculty_name %>
</p>
<h6 class="card-text"> Faculty Email Id </h6>
<p class="card-text"> <%= faculty.email %>
</p>


    </div>
    <div class="card-footer">
      <small class="text-muted">join us</small>
    </div>
  </div>
 <% end %>
</div>

<style type="text/css">
  .bg{background: -webkit-linear-gradient(to left, #000066, #000066, #000066);
          background: linear-gradient(to bottom right, #ffffff 0%, #99ffcc 100%);
        padding: 30px;
        text-align: left;
        font-size: 16px;
        size: 9876px
       
        }
          
      
</style>








