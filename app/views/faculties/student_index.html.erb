


<p></p>

<div class="card-deck dn" style="width: 75rem;">
  <div class="row">

    <% @faculties.each do |faculty| %>
    <div class="col-md-4">
      <p>  

        <div class="card"  >
          <img src='/assets/db.jpg' alt="" height="200" width="350" >
          <div class="card-body cg ">
            <h4 class="card-title"><%= faculty.faculty_name %></h4>

            <h6 class="card-text">  Faculty Name </h6>
            <p class="card-text"> <%= faculty.faculty_name %>
            </p>
            <h6 class="card-text"> Faculty Email Id </h6>
            <p class="card-text"> <%= faculty.email %>
            </p>


          </div>
          <div class="card-footer">
            <small class="text-muted">join us</small>
          </div>
        </div>
      </p>
    </div>
    <% end %>
  </div> 

</div>
