 <% if admin_signed_in? %>


 <%if params[:disply_type]== "batch details" %>

         <div class="container">



              <table class="table table-bordered cool">

                  <% @pooja = @batch.users %>


                  <p class="table table-bordered effect" , style="text-align:center; color: black; font-size: 80px ">Student Details</p>

                  <tr class="table-active">
                   <th>student No.</th>
                   <th>Name </th>
                   <th>Email</th>
                 </tr>



                 <% @pooja.each   do |user|%>

                     <tr class="table-active">
                      <td>
                        <%= user.id%>
                      </td>


                      <td>
                        <%= link_to "#{user.student_name}", students_show_path(user)%>
                      </td>

                      <td>
                        <%= user.email%>
                      </td>

                  <% end %>
              </table>      
        </div>


  <%else %>

        <div class="container">

         <p>
           <strong>Batch No.</strong>
           <%= @batch.id%>
         </p>
         <p>
           <strong>Batch name</strong>
           <%= @batch.batch_name %>
         </p> 

         <p>
           <strong>Faculty name</strong>
           <%= @batch.faculty.faculty_name %>
         </p> 

         <p>
           <strong>No. of student</strong>
           <%= @batch.users.ids.count %>
         </p>

         <p>
           <strong>batch start timing</strong>
           <%= @batch.starting_time.strftime("%H:%M") %>
         </p>

         <p>
           <strong>batch end timing</strong>
           <%= @batch.ending_time.strftime("%H:%M") %>
         </p>


         <% if admin_signed_in? %>

         <%=  link_to 'Admin back' ,  batches_path %>

         <% elsif user_signed_in?%>

         <%=  link_to 'User back' ,  student_batch_index_path  %>
         <% end %>
        </div> 

    <% end %>

<%end %>


