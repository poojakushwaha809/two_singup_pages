
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
  <h1>Listing batches</h1>

  <table class="table table-bordered">
    <thead>
      <tr>

        <th>batch name</th>
        <th>faculty name</th>
        
        <th>starting time</th>
        <th>ending time</th>

        <th>show</th>
        <th>edit</th>
        <th>destroy</th>

          </tr>
    </thead>
    <tbody>
      </tr>
 
  <% @batches.each do |batch| %>
    <tr>
        <td class="info"><%= batch.batch_name %></td>
        <td class="info"><%= batch.faculty.faculty_name %></td>
        <td class="info"><%= batch.starting_time.strftime("%H : %S") %></td>
        <td class="info"><%= batch.ending_time.strftime("%H : %S") %></td>

        <td class="success"><%= link_to 'Show', batch_path(batch) %></td>
        <td class="warning"><%= link_to 'Edit', edit_batch_path(batch) %></td>
        <td class="danger"><%= link_to 'Destroy', batch_path(batch),
        method: :delete,
        data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>

</body>
</html>


