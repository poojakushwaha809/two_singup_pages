
<div class="container">
 <p style="text-align: right;">  <%= link_to 'New batch', new_batch_path, class: "btn btn-info active" %></p>

<table class="table-bordered effect">
    <th class="table-active">Batch Details</th>
</table>

  <table class="table table-bordered  bac">
    <thead>
      <tr class="table-active">
        <th>Batch No. </th>
        <th>batch name &<br> batch student details</th>
        <th>No. of<br> student in batch</th>
        <th>Batch details </th>
        <th colspan="2">Action</th>
          </tr>
    </thead>
    <tbody>
      
  <% @batches.each do |batch| %>
    <tr>
      <td class="table-active"><%= batch.id %></td>
        <td class="table-active"><%= link_to " #{batch.batch_name}", batch_path(batch,disply_type: "batch details")%></td>
              <td class="table-active"><%= batch.users.ids.count %></td>


        <td class="table-success"><%= link_to 'Show', batch_path(batch,disply_type: "student_details"), class: "btn btn-success active" %></td>
        <td class="table-warning"><%= link_to 'Edit', edit_batch_path(batch) , class: "btn btn-warning active"%></td>
        <td class="table-danger"><%= link_to 'Destroy', batch_path(batch),
        method: :delete,
        data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>
