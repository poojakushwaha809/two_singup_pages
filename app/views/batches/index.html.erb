

<div class="container">
   <%= link_to 'New batch', new_batch_path, class: "btn btn-info active" %>

  <h1>Listing batches</h1>

  <table class="table table-striped table-bordered  ">
    <thead>
      <tr class="active">

        <th>batch name</th>
        <th>faculty name</th>
        
        <th>starting time</th>
        <th>ending time</th>
        <th colspan="3">Action</th>


          </tr>
    </thead>
    <tbody>
      
 
  <% @batches.each do |batch| %>
    <tr>
        <td class="info"><%= batch.batch_name %></td>
        <td class="info"><%= batch.faculty.faculty_name %></td>
        <td class="info"><%= batch.starting_time.strftime("%H : %S") %></td>
        <td class="info"><%= batch.ending_time.strftime("%H : %S") %></td>

        <td class="success"><%= link_to 'Show', batch_path(batch), class: "btn btn-success active" %></td>
        <td class="warning"><%= link_to 'Edit', edit_batch_path(batch) , class: "btn btn-warning active"%></td>
        <td class="danger"><%= link_to 'Destroy', batch_path(batch),
        method: :delete,
        data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
    </tr>
  <% end %>
    </tbody>
  </table>
</div>

</body>
</html>

