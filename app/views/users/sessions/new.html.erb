<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<body>
<div class="container">
  <div class="d-flex justify-content-center h-100">
    <div class="card">
      <div class="card-header">
        <h3>Student Log In</h3>
        <!-- <div class="d-flex justify-content-end social_icon">
          <span><i class="fab fa-facebook-square"></i></span>
          <span><i class="fab fa-google-plus-square"></i></span>
          <span><i class="fab fa-twitter-square"></i></span>
        </div> -->
      </div>
      <div class="card-body">
        <form>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-user"></i></span>
            </div>
<!--             <input type="text" class="form-control" placeholder="username">
 -->               


   <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "text", class: "form-control", placeholder: "Email" %>

          </div>
          <div class="input-group form-group">
            <div class="input-group-prepend">
              <span class="input-group-text"><i class="fas fa-key"></i></span>
            </div>
<!--             <input type="password" class="form-control" placeholder="password">
 -->
                <%= f.password_field :password, autocomplete: "current-password", type: "password", class: "form-control", placeholder: "password" %>

          </div>
          <div class="row align-items-center remember">
            <input type="checkbox">Remember Me
<!--                   <%= f.label :Remember_Me, type: "checkbox" %>
 -->          </div>
          <div class="form-group">
<!--             <input type="submit" value="Login" class="btn float-right login_btn">
 -->
                <%= f.submit "Log in", type:"submit", value:"Login", class: "btn float-right login_btn btn-sm"%>

          </div>
        </form>
      </div>
      <div class="card-footer">
        <div class="d-flex justify-content-center links">
          Don't have an account?<a href="#"></a>

            <%= link_to "Sign Up", new_registration_path(resource_name), class: "btn-warning btn-sm" %><br />
            <a class="btn-danger btn-sm" href="/users/auth/google_oauth2">Login with +Google</a>
            <%#= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path %>

        </div>
        <div class="d-flex justify-content-center">
          <a href="#"></a>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />

        </div>
      </div>
    </div>
  </div>
</div>
</body>


<%= render 'style' %>
<% end %>