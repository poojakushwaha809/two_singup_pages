<div class="content">
  <p></p>
       <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

               <p style="text-align:">   <%= render "users/shared/error_messages", resource: resource %></p>

               <div class style="text-align: center; " >
                      
                    <%= f.collection_select :batch_id, Batch.order(:batch_name),:id,:batch_name, include_blank: true %>
                     <%= f.label  "Select course "  %> 
                </div><p></p>
                 
                 <div>
                  <%= f.file_field :student_image, class: "image", placeholder: "student image" %>
              </div>


              <div style="text-align: ">
                  <%= f.text_field :student_name, autofocus: true, placeholder: "Studnet Name", class:"Name" %>
                 </div>
                 <div>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "Email", placeholder:"Email" %>
              </div>


              <div style="text-aling: ">
                  <%= f.password_field :password, autocomplete: "new-password", type:"password", class:"Address", placeholder:"Password" %>
                  <br><% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                  <% end %>
                </div>


                <div style="text-aling: ">
                  <%= f.password_field :password, autocomplete: "new-password", placeholder:"Confirm password" %>
                     
                </div>


                <div style="text-aling: ">
                    <%= f.text_field :college_name, placeholder: "College Name"%>
                </div>



                <div style="text-aling: ">
                    <%= f.text_field :student_address, autofocus: true, placeholder: "Address" %>
                </div>



                <div style="text-aling: ">
                    <%= f.text_field :contact_number, type:"text", class: "Tele", placeholder:"Contact No."%>
                </div>



                <div style="text-aling: ">
                    <%= f.submit "Submit", class: "button" %>
                </div>
                <br>
             <%= render "users/shared/links" %>


        <%end%>
</div>



