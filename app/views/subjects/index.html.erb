

<div class="container">

 <p style="text-align: right;"><%= link_to 'New subject', new_subject_path, class: "btn btn-info active" %></p>


 <table class="table-bordered effect">
  <th class="table-active"> subject Details</th>
</table>

<p></p>
<table class="table table-bordered fac ">
  <tr class="table-active">
    <th>subject name</th>
    
    <th colspan="3">Action</th>
  </tr>
  <% @subjects.each do |subject| %>
  <tr>
    <td class="table-active" ><%= subject.subject_name %></td>
    <td class="table-success"><%= link_to 'Show', subject_path(subject), class: "btn btn-success active" %></td>
    <td class="table-warning"><%= link_to 'Edit', edit_subject_path(subject) , class: "btn btn-warning active" %></td>
    <td class="table-danger"><%= link_to 'Destroy', subject_path(subject),
    method: :delete,
    data: { confirm: 'Are you sure?' }, class: "btn btn-danger active" %></td>
  </tr>
  <% end %>
</table>
</div>

